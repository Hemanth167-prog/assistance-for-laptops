#!/usr/bin/env python3
"""
Smart Voice Assistant (Python) — Open apps & search websites by exact command

Behavior:
- Accepts voice (SpeechRecognition) or typed commands.
- "open <name>" opens an exact mapped application or a full URL (must start with http/https).
- "search for <query>" opens a Google search in the default browser.
- "open <short-name>" opens mapped short-names like "youtube" or "github" if present in APP_MAPPINGS.
- "list apps" reads/prints available exact friendly names you can use with "open".
- "play <query>" prefers local file playback; otherwise does a YouTube search.
- Requires you to edit APP_MAPPINGS for the exact application names/paths on your machine.

Edit APP_MAPPINGS to include exact friendly names you intend to speak or type.
"""
from __future__ import annotations
import os
import platform
import subprocess
import time
import re
import webbrowser
from urllib.parse import quote_plus

# Optional imports - if not installed the assistant will still run with text commands
try:
    import speech_recognition as sr
except Exception:
    sr = None

try:
    import pyttsx3
except Exception:
    pyttsx3 = None

try:
    import pyautogui
    HAVE_PYAUTOGUI = True
except Exception:
    pyautogui = None
    HAVE_PYAUTOGUI = False

# ----------------- Configuration -----------------
# Replace these mappings with the exact app names/paths on your system.
# Keys are the exact friendly names the assistant will accept (case-insensitive).
APP_MAPPINGS = {
    "windows": {
        "notepad": r"notepad.exe",
        "chrome": r"C:\Program Files\Google\Chrome\Application\chrome.exe",
        "firefox": r"C:\Program Files\Mozilla Firefox\firefox.exe",
        "calculator": r"calc.exe",
        "vscode": r"C:\Users\%USERNAME%\AppData\Local\Programs\Microsoft VS Code\Code.exe",
        "vlc": r"C:\Program Files\VideoLAN\VLC\vlc.exe",
        "spotify": r"C:\Users\%USERNAME%\AppData\Roaming\Spotify\Spotify.exe",
        "youtube": "https://www.youtube.com",
        "github": "https://github.com",
        "instagram":"https://www.instagram.com",
    },
    "darwin": {
        "chrome": "Google Chrome",
        "safari": "Safari",
        "firefox": "Firefox",
        "vscode": "Visual Studio Code",
        "vlc": "VLC",
        "spotify": "Spotify",
        "youtube": "https://www.youtube.com",
        "github": "https://github.com",
    },
    "linux": {
        "firefox": "firefox",
        "chrome": "google-chrome",
        "terminal": "gnome-terminal",
        "code": "code",
        "vlc": "vlc",
        "spotify": "spotify",
        "youtube": "https://www.youtube.com",
        "github": "https://github.com",
    },
    "android": {
        # Example (requires Termux or adb shell): "youtube": ("com.google.android.youtube", "com.google.android.youtube.HomeActivity")
    },
}
# -------------------------------------------------

OS_NAME = platform.system().lower()
TTS_ENGINE = None


def init_tts():
    global TTS_ENGINE
    if pyttsx3 is None:
        TTS_ENGINE = None
        return
    try:
        TTS_ENGINE = pyttsx3.init()
        TTS_ENGINE.setProperty("rate", 150)
    except Exception:
        TTS_ENGINE = None


def speak(text: str):
    print("Assistant:", text)
    if TTS_ENGINE:
        try:
            TTS_ENGINE.say(text)
            TTS_ENGINE.runAndWait()
        except Exception:
            pass


def _platform_key() -> str:
    if OS_NAME.startswith("win"):
        return "windows"
    if OS_NAME.startswith("darwin"):
        return "darwin"
    if OS_NAME.startswith("linux"):
        return "linux"
    if "android" in OS_NAME:
        return "android"
    return "linux"


def list_apps() -> list[str]:
    return sorted(APP_MAPPINGS.get(_platform_key(), {}).keys())


def find_exact_mapping(name: str):
    """Return mapped value for an exact friendly name (case-insensitive)."""
    mapping = APP_MAPPINGS.get(_platform_key(), {})
    name_norm = name.strip().lower()
    for k, v in mapping.items():
        if k.strip().lower() == name_norm:
            return v
        # allow matching keys that include optional parentheses: "chrome (user)"
        k_simple = re.sub(r"\s*\(.*\)\s*$", "", k).strip().lower()
        if k_simple == name_norm:
            return v
    return None


def open_mapped(name: str) -> tuple[bool, str]:
    """
    Strict behavior:
    - If an exact friendly mapping exists, open it.
    - If the mapping is a URL (starts with http), open in browser.
    - If mapping is an executable/path/command, try platform-specific launch.
    - If no mapping, return False and a helpful message listing available friendly names.
    """
    mapped = find_exact_mapping(name)
    if mapped is None:
        apps = list_apps()
        if not apps:
            return False, "No applications are mapped for this platform. Edit APP_MAPPINGS."
        sample = ", ".join(apps[:30])
        return False, f"No exact mapping for '{name}'. Available exact names: {sample}"

    # If mapping is a URL
    if isinstance(mapped, str) and mapped.lower().startswith("http"):
        webbrowser.open(mapped)
        return True, f"Opened website {mapped}"

    platform_key = _platform_key()
    # Android tuple
    if platform_key == "android" and isinstance(mapped, tuple):
        try:
            pkg, act = mapped
            subprocess.Popen(["am", "start", "-n", f"{pkg}/{act}"])
            return True, f"Opened {name} on Android"
        except Exception as e:
            return False, f"Failed to open Android app: {e}"

    # Windows
    if platform_key == "windows":
        try:
            mapped_path = os.path.expandvars(mapped)
            os.startfile(mapped_path)
            return True, f"Opened {name}"
        except Exception:
            try:
                subprocess.Popen([mapped])
                return True, f"Opened {name}"
            except Exception as e:
                return False, f"Failed to open {name}: {e}"

    # macOS
    if platform_key == "darwin":
        try:
            subprocess.Popen(["open", "-a", mapped])
            return True, f"Opened {name}"
        except Exception as e:
            return False, f"Failed to open {name}: {e}"

    # Linux
    if platform_key == "linux":
        try:
            subprocess.Popen([mapped])
            return True, f"Opened {name}"
        except Exception as e:
            return False, f"Failed to open {name}: {e}"

    return False, "Unsupported platform"


def open_url_if_allowed(url_candidate: str) -> tuple[bool, str]:
    """Allow a full URL only if it begins with http/https."""
    if re.match(r"^https?://", url_candidate, flags=re.I):
        webbrowser.open(url_candidate.strip())
        return True, f"Opened URL {url_candidate}"
    return False, "URLs must start with http:// or https://. To open short-names use mapped friendly names."


def search_google(query: str) -> tuple[bool, str]:
    q = quote_plus(query)
    url = f"https://www.google.com/search?q={q}"
    webbrowser.open(url)
    return True, f"Searched Google for '{query}'"


def play_target(target: str) -> tuple[bool, str]:
    # Prefer local file first
    if os.path.exists(target):
        try:
            if OS_NAME.startswith("win"):
                os.startfile(target)
            elif OS_NAME.startswith("darwin"):
                subprocess.Popen(["open", target])
            else:
                subprocess.Popen(["xdg-open", target])
            return True, f"Playing local file {target}"
        except Exception as e:
            return False, f"Failed to play local file: {e}"
    # Fallback to YouTube search
    q = quote_plus(target)
    webbrowser.open(f"https://www.youtube.com/results?search_query={q}")
    return True, f"Searched YouTube for '{target}'"


def execute_command(cmd: str) -> tuple[bool, str]:
    text = cmd.strip()
    text_lower = text.lower()

    # Explicit list of apps
    if text_lower in ("list apps", "list applications", "available apps"):
        apps = list_apps()
        if not apps:
            return False, "No apps have been mapped for this platform."
        return True, "Available exact names: " + ", ".join(apps)

    # open youtube (mapped) or play youtube <query>
    if text_lower.startswith("open youtube") or text_lower == "open youtube":
        return open_mapped("youtube")

    m_play_yt = re.match(r"play (?:youtube )?(.*)", text_lower)
    if m_play_yt and "youtube" in text_lower:
        q = m_play_yt.group(1).strip()
        if q == "" or q == "youtube":
            return open_mapped("youtube")
        return play_target(q)

    # Open commands
    m_open = re.match(r"open (.+)", text, flags=re.I)
    if m_open:
        target = m_open.group(1).strip()
        # If user provided a full URL with scheme, allow it
        if re.match(r"^https?://", target, flags=re.I):
            return open_url_if_allowed(target)
        # Otherwise require exact friendly mapping
        return open_mapped(target)

    # Search commands
    m_search = re.match(r"(search for|google) (.+)", text_lower, flags=re.I)
    if m_search:
        query = m_search.group(2).strip()
        return search_google(query)

    # Play (local file preferred, else YouTube search)
    m_play = re.match(r"play (.+)", text, flags=re.I)
    if m_play:
        target = m_play.group(1).strip()
        return play_target(target)

    return False, "Command not recognized. Use 'list apps' to see exact names or say 'search for <query>'."

# ------------------ Voice helpers (optional) ------------------
def listen_voice(timeout: int = 6, phrase_time_limit: int = 6) -> str:
    if sr is None:
        raise RuntimeError("SpeechRecognition is not installed.")
    r = sr.Recognizer()
    with sr.Microphone() as source:
        r.adjust_for_ambient_noise(source, duration=0.6)
        print("Listening...")
        audio = r.listen(source, timeout=timeout, phrase_time_limit=phrase_time_limit)
    try:
        text = r.recognize_google(audio)
        print("Heard:", text)
        return text
    except sr.UnknownValueError:
        return ""
    except sr.RequestError as e:
        raise RuntimeError(f"Speech recognition error: {e}")

# ------------------ Main loop ------------------
def main():
    init_tts()
    speak("Assistant ready. Say a command or type it. Say exit to quit.")
    while True:
        try:
            mode = input("Input mode — (1) voice  (2) text  [default 1]: ").strip() or "1"
            if mode == "2":
                user = input("Type command: ").strip()
            else:
                try:
                    user = listen_voice()
                except Exception as e:
                    print("Voice input error:", e)
                    user = input("Voice failed — type command instead: ").strip()

            if not user:
                continue
            if user.strip().lower() in ("exit", "quit", "stop", "bye"):
                speak("Goodbye.")
                break

            ok, message = execute_command(user)
            speak(message)
        except KeyboardInterrupt:
            speak("Exiting. Goodbye.")
            break
        except Exception as e:
            speak(f"An error occurred: {e}")

if __name__ == "__main__":
    main()
